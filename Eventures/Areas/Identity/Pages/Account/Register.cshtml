@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

    <div class="mx-auto w-50 text-md-center font-weight-bold">
        <h1>@ViewData["Title"]</h1>
        <hr class="hr-2" />
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr class="hr-2" />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="row">
                <div class="form-group col-xl-6">
                    <label asp-for="Input.Username"></label>
                    <input asp-for="Input.Username" class="form-control" type="text" placeholder="Username..." />
                    <span asp-validation-for="Input.Username" class="text-danger"></span>
                </div>
                <div class="form-group col-xl-6">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" type="email" placeholder="Email..." />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-xl-6">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" type="password" placeholder="Password..." />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="form-group col-xl-6">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" type="password" placeholder="Confirm password..." />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>
            <hr class="hr-2" />
            <div class="row">
                <div class="form-group col-xl-6">
                    <label asp-for="Input.FirstName"></label>
                    <input asp-for="Input.FirstName" class="form-control" type="text" placeholder="First name..." />
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                <div class="form-group col-xl-6">
                    <label asp-for="Input.LastName"></label>
                    <input asp-for="Input.LastName" class="form-control" type="text" placeholder="Last name..." />
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-xl-12">
                    <label asp-for="Input.Ucn"></label>
                    <input asp-for="Input.Ucn" class="form-control" type="number" placeholder="Unique Civil Number..." />
                    <span asp-validation-for="Input.Ucn" class="text-danger"></span>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
